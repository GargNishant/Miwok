<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/Miwok_background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context="com.example.nishantgarg.miwok.Activities.MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/NumbersActivityID"
        android:paddingTop="@dimen/vertical_top_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="@color/numbers_background"
        android:text="@string/category_numbers"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:id="@+id/ColorsActivityID"
        android:background="@color/colors_background"
        android:text="@string/category_colors"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/FamilyActivityID"
        android:background="@color/family_background"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:text="@string/category_family"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/PhrasesActivityID"
        android:background="@color/phrases_background"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:text="@string/category_phrases"/>
</LinearLayout>